@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div style="width:100%;display:flex; justify-content:center">
    <div style="width:100%; margin:3% 5%; max-width:600px" method="post">
        <div style="width:100%;">
            <h1>Categories</h1>
            <a asp-controller="Category" asp-action="Create" 
                style="align-self:flex-start;" 
                class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>&nbsp; Create Category
            </a>
            <div style="width:100%; margin-top:10px">
                <table style="width:100%" class="table table-secondary table-striped border">
                    <thead >
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Display Order</th>
                            <th scope="col">Created On</th>
                            <th scope="col" ></th>
                            <th scope="col" ></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td scope="row">@item.Name</td>
                            <td>@item.DisplayOrder</td>
                            <td>@item.CreatedDateTime</td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" 
                                    asp-route-id="@item.Id"
                                    style="align-self:flex-start;" 
                                    class="btn btn-primary">
                                    Edit
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Category" asp-action="Delete" 
                                    asp-route-id="@item.Id"
                                    style="align-self:flex-start;" 
                                    class="btn btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





