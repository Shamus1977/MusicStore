@model Category

@{
    ViewData["Title"] = "Create Category";
}
<div style="width:100%;display:flex; justify-content:center">
    <form style="width:100%; margin:3% 5%; max-width:500px" method="post">
        <div class="border p-3 mt-4 rounded-2">
            <div class="row pb-2" >
                <h2 class="text-primary">Create Category</h2>
                <hr/>
            </div>
            <div asp-validation-summary="All" class="text-danger" ></div>
            <div class="form-group mb-2">
                <label class="" style="font-size:1.5rem;display:block;" asp-for="Name">Name:</label>
                <input style="width:100%" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger" ></span>
            </div>
            <div class="form-group mb-3">
                <label style="font-size:1.5rem;display:block;" asp-for="DisplayOrder">Display Order:</label>
                <input style="width:100%" asp-for="DisplayOrder" />
                <span asp-validation-for="DisplayOrder" class="text-danger" ></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px; margin-right:5px">Create</button>
            <a asp-controller="Category" asp-action="Index" 
                class="btn btn-danger" style="width:150px" >
                Cancel
            </a>
        </div>
    </form>
</div>

