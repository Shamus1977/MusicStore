@model ShoppingCart

<form method="post">
    <div class="card container col-md-6">
        <div class="card-header bg-primary text-light ml-0 row " >
            <div class="col-12" >
                <h1 class="text-white" >@Model?.Product?.Title</h1>
                <h5 class="text-white">By: @Model?.Product?.Band?.Name</h5>
            </div>
        </div>
        <div class="card-body row container" >
            <div class="container rounded p-2" >
                <div class="row">
                    <div class="col-6 mb-1" >
                        <div class="row pl-2" >
                            <span class="text-muted">Date Added: @Model?.Product?.AddedDate.ToShortDateString()</span>
                        </div>
                        <div class="row pl-2" >
                            <span class="text-muted">Release Date: @Model?.Product?.Released.ToShortDateString()</span>
                        </div>
                    </div>
                    <div class="col-6" >
                        <span class="badge bg-info pt-2" style="height:30px" >Format: @Model?.Product?.MediaType</span>
                        <span class="badge bg-info pt-2" style="height:30px" >Category: @Model?.Product?.Category?.Name</span>
                    </div>
                </div>
                <div class="row text-center pl-2" style="color:maroon; font-weight:bold" >
                    <div class="col-2 p-1" >
                        <div class="row pl-2" >
                            <div>Price: @Model?.Product?.Price</div>
                        </div>
                    </div>
                </div>
                <div class="row pl-2">
                    <div class="col-4 form-group">
                        <label asp-for="@Model!.Count" class="" >Count:</label>
                        <input asp-for="@Model!.Count" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-3 offset-lg-1 text-center mb-1" >
                <img src="@Model?.Product?.ImageUrl" style="width:100%" class="rounded" />
            </div>
            <div class="row col-8 col-lg-6 pl-2">
                <div>Description: @Html.Raw(@Model?.Product?.Description)</div>
            </div>
            <div class="row col-8 col-lg-6 pl-2">
                <div>Tracks: @Html.Raw(@Model?.Product?.Tracks)</div>
            </div>
                <div class="row col-8 col-lg-6 pl-2">
            <div>Members: @Html.Raw(@Model?.Product?.Members)</div>
            </div>
        </div>
        <div class="card-footer" >
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control">Back</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-primary form-control">Add To Cart</a>
                </div>
            </div>
        </div>
    </div>
</form>

